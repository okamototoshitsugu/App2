<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <nav class="container">
      <span>Bookers</span>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="">
          <a class="glyphicon glyphicon-home home"  <%= link_to "Home", user_path(current_user) %> ></a>
        </li>
        <li class="">
          <a class="glyphicon glyphicon-user users" <%= link_to "Users", users_path %> > </a>
        </li>
        <li class="">
          <a class="glyphicon glyphicon-book books" <%= link_to "Books" , books_path %> ></a>
        </li>
        <li class="">
          <a class="glyphicon glyphicon-log-out logout" <%= link_to "logout", destroy_user_session_path, method: :delete %> > </a>
        </li>
        <% else %>

        <li class="">
          <a class="glyphicon glyphicon-home home" <%= link_to "Home", root_path %> ></a>
        </li>
        <li class="">
          <a class="glyphicon glyphicon-link about" <%= link_to "About", "/home/about" %> > </a>
        </li>
        <li class="">
          <a class="glyphicon glyphicon-edit sign_up" <%= link_to "Sign up", new_user_registration_path %> ></a>
        </li>
        <li class="">
          <a class="glyphicon glyphicon-log-in sign_in" <%= link_to "login", user_session_path %> > </a>
        </li>
        <% end %>

      </ul>
    </header>
    <div class="body">
      <%= yield %>
    </div>
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-xs-3 col-xs-offset-9">
              <p>©︎ Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
    </body>
    </html>
