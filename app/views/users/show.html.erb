<div class="container">
	<p id="notice">
		<%= notice %>
	</p>
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<div class="profile-container">
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</div>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">

				<p><%= link_to "", edit_user_path(@user), class: "pull-right col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>

				<h2>New book</h2>
				<% if @book.errors.any? %>
				<div id="error_explanation">
					<h3><%= pluralize(@book.errors.count, "error") %> error:</h3>
					<ul>
						<% @book.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<%= form_for(@book) do |f| %>

				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_area :body %>

				<br><%= f.submit 'Create Book' %></br>
				<% end %>
			</div>
		</div>

		<div class="col-xs-9">
			<h2>books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
						</td>
						<td>
							<P><%= link_to book.title, book_path(book.id) %></P>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>



