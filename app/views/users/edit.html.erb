<h2>User info</h2>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h3><%= pluralize(@user.errors.count, "error") %> error:</h3>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= form_for(@user) do |f| %>
<div class="form-group has-icon">
	<label class="control-label sr-only" for="inputEmail">Name</label>
	<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
	<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>
<!-- ここに追加 -->
<div class="form-group has-icon">
	<div class="user-edit-image">
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
	</div>
	<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
	<%= f.attachment_field :profile_image,  class: "user-edit-form" %>
</div>
 <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>